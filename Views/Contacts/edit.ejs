<h2>Edit Contact Info</h2>

<form action="/contacts/edit/<%= contact.id %>?_method=PUT" method="POST">

    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= contact.name %>" placeholder="John"/>
    </div>
    
    <div>
        <label>Phone Number</label>
        <input type="text" name="phoneNumber" value="<%= contact.phoneNumber %>" placeholder="00-0000-0000">
    </div>

    <div>
        <label>E-mail Address</label>
        <input type="email" name="email" value="<%= contact.email %>" placeholder="john@gmail.com">    
    </div>

    <div>
        <label>About this person</label>
        <input type="text" name="note" value="<%= contact.note %>" placeholder="John is my friend">
    </div>

    <a href="/contacts">Cancel</a>
    <button type="submit">Save</button>
    
</form>