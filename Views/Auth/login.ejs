<div class="container">
    <div class="header">
        <h2>Login</h2>

        <%- include('../Partials/_form_messages.ejs') %>
    </div>

    <div class="card">
        <form action="/users/login" method="POST">
            
            <div>
                <input type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email Address">
            </div>

            <div>
                <input type="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Password">    
            </div>

            <div class="card-content">
                <a href="/" class="btn">Cancel</a>
                <button type="submit" class="btn btn-solid primary">Login</button>
            </div>

            <div>
                <p>No account yet? <a href="/users/signup">Sign Up</a></p>
            </div>
        </form>
    </div>

</div>